{% macro ProsCons(name, modifier='') %}
  {% set pros = getElementProp(name, 'pros') %}
  {% if pros %}
  <div class="ProsCons{% if modifier %} ProsCons--{{ modifier }}{% endif %}">
  <div class="Pros">
  <h3 class="ProsCons__heading gv-u-heading-small">{{ macros.string('string:pros-heading') }}</h3>
  <ul class="ProsCons__list--pros">
  {% for pro in pros %}
    <li class="ProsCons__item ProsCons__item--pros">{{ pro }}</li>
  {% endfor %}
  </ul>
  </div>
  <div class="Cons">
  <h3 class="ProsCons__heading gv-u-heading-small">{{ macros.string('string:cons-heading') }}</h3>
  <ul class="ProsCons__list--cons">
  {% for con in getElementProp(name, 'cons') %}
    <li class="ProsCons__item ProsCons__item--cons">{{ con }}</li>
  {% endfor %}
  </ul>
  </div>
  </div>
  {% endif %}
{% endmacro %}