@import 'utils/_site.pcss';
@import 'utils/_typography.pcss';

.c-step {
  @apply --section-grid;
  @apply --section-divider;
  position: relative;
  padding-top: 2.5rem;
}

/*
@media (--ml-vp) {
  .c-step:first-child {
    margin-top: 3rem;
  }
}
*/

@media only screen and (min-width: 740px) {
  .c-step > * {
    padding-left: 9rem;
  }
}

.c-step__count {
  color: #6f777b;
  text-transform: uppercase;
  font-size: 1.8rem;
  font-weight: bold;
  background-repeat: no-repeat;
  padding: 0.5rem 3.5rem;
  background-size: 3rem;
  margin-top: -0.5rem;
  margin-bottom: 1rem;
}
@media only screen and (min-width: 740px) {
  .c-step__count {
    position: absolute;
    padding: 0;
    margin-top: 0;
    top: 2.75rem;
    width: 10rem;
    height: 8rem;
    background-position: 0 100%;
    background-size: 5rem;
  }
}

.c-step__heading {
  margin-top: 0;
}

.c-step__content h3 {
  @apply --gv-u-heading-small;
}


