{% from 'components/Section/Section.njk' import Section with context %}

{% macro SectionVideo(name) %}
{%- set video_content = VideoPlayer(name) -%}
{{ Section(name, className='SectionVideo', content=video_content) }}
{% endmacro %}

{% macro VideoPlayer(name) %}
<div class="VideoPlayer__container VideoPlayer__lightbox" type="video" id="c_video_player">
<div class="VideoPlayer__wrapper">
<p class="VideoPlayer__link"><a href="https://www.youtube.com/watch?v={{ getFormattedProp(name, 'youtube_code') }}" data-video-id="{{ getFormattedProp(name, 'video_id') }}" data-video-code="{{ getFormattedProp(name, 'youtube_code') }}"><img src="https://img.youtube.com/vi/{{ getFormattedProp(name, 'youtube_code') }}/0.jpg" alt="{{ getFormattedProp(name, 'heading') }} - Video on YouTube"></a></p>
<p class="VideoPlayer__accessible-link"><a href="https://accessyoutube.org.uk/play/{{ getFormattedProp(name, 'youtube_code') }}">{{ getFormattedProp(name, 'heading') }} - Video on Access:YouTube</a></p>
</div>
</div>

