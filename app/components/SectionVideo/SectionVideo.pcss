@import 'utils/_app.pcss';

.SectionVideo {
  @apply --section-divider;
}

.SectionVideo__heading {
  @apply --section-heading;
}

.VideoPlayer__wrapper {
  position: relative;
  width: 100%;
  padding-bottom: 56.25%; /* aspect ratio: 360 / 640 */
}

.SectionVideo iframe {
  border: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
