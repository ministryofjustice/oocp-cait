#global-cookie-message {
  background-color: #d5e8f3;
  padding: 10px 0;
}
.cookie-seen {
  display: none;
}
#global-cookie-message .CookieMessage {
    max-width: 960px;
    margin: 0 15px;
}
@media (min-width: 641px) {
  #global-cookie-message .CookieMessage {
    margin: 0 30px;
  }
}
@media (min-width: 1020px) {
  #global-cookie-message .CookieMessage {
    margin: 0 auto;
  }
}