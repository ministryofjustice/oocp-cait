{
  "name": "pflr-cait",
  "version": "1.0.1-a",
  "engines": {
    "node": "7.7.1",
    "npm": "4.1.2"
  },
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "dependencies": {
    "moj-express-kit": "https://github.com/solidgoldpig/moj-express-kit.git#eda341c",
    "npm-run-all": "^4.0.2"
  },
  "scripts": {
    "build": "npm-run-all build:css",
    "build:css": "env APPDIR=$PWD npm explore moj-express-kit -- yarn postcss",
    "githooks": "git config core.hooksPath .githooks",
    "githooksUnset": "git config --unset core.hooksPath",
    "cleanbuild": "rm -rf public",
    "lint": "npm-run-all -p lint:data lint:stylesheets lint:templates lint:javascript:client",
    "lint:data": "lint-data",
    "lint:javascript:client": "lint-javascript-client",
    "lint:javascript:server": "lint-javascript-server",
    "lint:stylesheets": "lint-stylesheets",
    "lint:templates": "lint-templates",
    "preinstall": "if [ -d .git ] && [ -x \"$(command -v git)\" ]; then npm run githooks; else echo 'git not installed'; fi;",
    "postinstall": "npm-run-all build",
    "test": "npm-run-all lint test:unit -s test:functional",
    "test:a11y": "spec/a11y/pa11y-crawl.sh",
    "test:docker": "npm-run-all -s test:unit:docker test:a11y test:functional:docker",
    "test:docker:cleanup": "sh ci/jenkins/cleanup.sh",
    "test:functional": "test-functional",
    "test:functional:docker": "sh ci/jenkins/functional-tests-run.sh",
    "test:unit": "echo no unit tests set up",
    "test:xunit": "ava --verbose scripts/**/*.unit.spec.js lib/**/*.unit.spec.js",
    "test:unit:docker": "sh ci/jenkins/unit-tests-run.sh",
    "watch:css": "env APPDIR=$PWD npm explore moj-express-kit -- yarn watchpostcss"
  }
}
