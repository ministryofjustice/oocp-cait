{
  "name": "pflr-cait",
  "version": "1.0.1",
  "engines": {
    "node": "7.7.1",
    "npm": "4.1.2"
  },
  "main": "start.js",
  "repository": {},
  "license": "MIT",
  "dependencies": {
    "npm-run-all": "^4.0.2",
    "pflr-express-kit": "https://github.com/ministryofjustice/pflr-express-kit.git#v0.0.13",
    "uuid": "^3.1.0"
  },
  "scripts": {
    "build": "npm-run-all clean:build -p build:css",
    "build:css": "env APPDIR=$PWD npm explore pflr-express-kit -- yarn postcss",
    "dev:start": "npm-run-all clean:build -p watch:css start",
    "githooks": "git config core.hooksPath .githooks",
    "githooksUnset": "git config --unset core.hooksPath",
    "clean:build": "rm -rf public",
    "clean:docker": "clean-docker",
    "lint": "npm-run-all -p lint:data lint:stylesheets lint:templates lint:javascript:client",
    "lint:data": "lint-data",
    "lint:javascript:client": "lint-javascript-client",
    "lint:javascript:server": "lint-javascript-server",
    "lint:stylesheets": "lint-stylesheets",
    "lint:templates": "lint-templates",
    "preinstall": "if [ -d .git ] && [ -x \"$(command -v git)\" ]; then npm run githooks; else echo 'git not installed'; fi;",
    "pretest:prepush": "npm-run-all clean:docker",
    "pretest:a11y:prepush": "npm-run-all clean:docker",
    "pretest:functional:prepush": "npm-run-all clean:docker",
    "pretest:unit:prepush": "npm-run-all clean:docker",
    "postinstall": "npm-run-all build",
    "posttest:prepush": "npm-run-all clean:docker",
    "posttest:a11y:prepush": "npm-run-all clean:docker",
    "posttest:functional:prepush": "npm-run-all clean:docker",
    "posttest:unit:prepush": "npm-run-all clean:docker",
    "start": "node start.js",
    "test": "npm-run-all -s lint test:unit -s test:functional",
    "test:a11y": "test-a11y",
    "test:a11y:prepush": "test-a11y-ci",
    "test:prepush": "npm-run-all -s test:unit:prepush test:a11y test:functional:prepush",
    "test:functional": "test-functional",
    "test:functional:prepush": "test-functional-ci",
    "test:unit": "ava --verbose lib/**/*.unit.spec.js",
    "test:unit:prepush": "test-unit-ci",
    "watch:css": "env APPDIR=$PWD npm explore pflr-express-kit -- yarn watchpostcss"
  }
}
