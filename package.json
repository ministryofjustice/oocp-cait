{
  "name": "oocp-cait",
  "version": "1.0.0",
  "engines": {
    "node": "4.4.5",
    "npm": "2.15.5"
  },
  "scripts": {
    "build": "npm-run-all -s cleanbuild -p build:scripts build:styles build:static build:views",
    "build:scripts": "babel src/scripts --out-dir dist/static/scripts --presets=es2015",
    "build:static": "npm-run-all -p build:static:fonts build:static:images",
    "build:static:fonts": "mkdir -p dist/static && cp -rp src/fonts dist/static/",
    "build:static:images": "mkdir -p dist/static && cp -rp src/images dist/static/",
    "build:styles": "mkdir -p dist/static/styles && stylus --compress -p src/styles/start.styl > dist/static/styles/core.min.css",
    "build:views": "mkdir -p dist && cp -rp src/views dist/",
    "cleanbuild": "rm -rf dist",
    "docker:build": "docker build -t familylaw-cait .",
    "docker:run": "docker run -p 44444:3000 -d familylaw-cait",
    "githooks": "git config core.hooksPath .githooks",
    "githooksUnset": "git config --unset core.hooksPath",
    "lint": "npm-run-all -p lint:*",
    "lint:app": "eslint scripts lib gulpfile.babel.js",
    "lint:client": "eslint src/scripts",
    "lint:spec": "eslint spec",
    "postinstall": "npm-run-all build",
    "preinstall": "if [ -x \"$(command -v git)\" ]; then yarn githooks; else echo 'git not installed'; fi;",
    "start": "node scripts/server.js",
    "test": "npm-run-all test:unit",
    "test:unit": "ava **/*.unit.spec.js"
  },
  "description": "Child Arrangements Informational Tool",
  "main": "scripts/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ministryofjustice/oocp-cait.git"
  },
  "author": "Alex Ward",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ministryofjustice/oocp-cait/issues"
  },
  "homepage": "https://github.com/ministryofjustice/oocp-cait#readme",
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.6.0",
    "basic-auth": "^1.1.0",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "ejs": "^2.5.2",
    "eslint": "latest",
    "express": "^4.14.0",
    "jeet": "6.1.2",
    "morgan": "^1.7.0",
    "npm-run-all": "^4.0.1",
    "rupture": "^0.6.1",
    "serve-favicon": "^2.3.2",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-jsdoc": "^0.2.0",
    "eslint-plugin-jsdoc": "^2.4.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1"
  }
}
