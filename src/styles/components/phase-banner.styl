&-phase-banner-alpha {
  font-size: 85%;
  margin: .5em 15px;
  +above(m) {
    margin: .5em auto;
  }
  width: auto;
  max-width: 960px;
  padding-bottom: $vspacing;
  border-bottom: 1px solid $dark;
  .phase-tag {
    display: inline-block;
    vertical-align: top;
    margin: 0 8px 0 0;
    padding: 2px 5px;
    font-size: 16px;
    line-height: 1.25;
    font-weight: 700;
    text-transform: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    color: #fff;
    background-color: #D73480;
  }
}
