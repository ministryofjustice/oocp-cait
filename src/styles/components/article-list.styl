&-article-list {
  clear:both;
  padding-top: $vspacing*2;
  .u-cards.cards-preparing {
    margin-top: -2rem;
  }
  .u-cards > h2 {
    padding: $spacing 0;
    font-size: $crust;
    border-bottom: 2px solid #000000;
    margin-bottom: 2rem;
  }
  &__summary {
    cf();
    padding: $spacing;
    margin-bottom: $vspacing*2;
    h1 {
      a {
        color: $links;
      }
    }

  }
  &.updating > * {
    opacity: 0.25;
  }
}
