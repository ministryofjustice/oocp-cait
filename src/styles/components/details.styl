&-details {
  .details-page & h1 {
    font-size: 3.6rem;
    +above(m) {
      font-size: 4.8rem;
    }
    margin-top: 0;
    a {
      text-decoration: underline;
      color: $links;
    }
  }
  .details-page & .c-body-copy > section {
    margin-top: 3rem;
    // +above(m) {
    //   margin-top: 5rem;
    // }
    &:first-child {
      margin-top: 0;
    }
  }
  .c-body-copy > section section + section {
    margin-top: 3rem;
    +above(m) {
      margin-top: 4rem;
    }
  }

  .details-page & .c-body-copy h2 {
    font-size: 2.4rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    margin-top: 0;
    +above(m) {
      font-size: 3.6rem;
      margin-bottom: 1.5rem;
    }
    padding: 0.5rem 0;
  }
  .c-video-player,
  .c-resources {
    & h2 {
      font-size: 2.4rem;
      margin-top: 2rem;
      line-height: 1.2;
      +above(m) {
        font-size: 3.6rem;
      }
      padding: 0.5rem 0;
    }
  }
  &__tags {
    ul {
      margin-left: 0;
      margin-bottom: $vspacing*3;
      list-style: none;
    }
    li {
      display: inline-block;
      color: $links;
      border: 1px solid $links;
      padding: ($vspacing/2) ($hspacing/2) ($vspacing/4);
      border-radius: $brad;
      font-size: $innerCore;
      line-height: $lineHeight;
      margin-bottom: 0;
      margin-right: $hspacing;
    }
  }
  .c-headed-text &__intro {
    padding-bottom: $vspacing*3;
    p {
      font-size: $outerCore;
    }
  }
  &__infosheet {
    dt {
      ff-title();
      font-size: $outerCore;
      margin-bottom: $vspacing;
    }
    dd {
      line-height: $lineHeight*1.5;
    }
    .u-primary &__scale {
      margin-left: 0;
      list-style: none;
      li {
        display: inline-block;
      }
    }
  }


  .c-body-details {
    overflow: hidden;
    padding-bottom: 1.5rem;
    margin-top: 1rem;
    +above(m) {
      margin-top: 3rem;
    }
  }
  .c-body-intro-copy p:first-child {
    font-size: 1.6rem;
    +above(m) {
      font-size: 2.4rem;
    }
    padding-top: 1rem;
  }
  .c-body-copy {
    margin-top: -2.5rem;
    +above(m) {
      margin-top: 0;
    }
  }
  +above(ml) {
    .c-body-intro {
      float: left;
      width: 65%;
    }
    .c-body-details {
      aside {
        float: right;
        width: 31%;
      }
    }
    // .c-body-copy {
    //   margin-top: 2.5rem;
    //   padding-top: 10rem;
    // }
    .c-body-copy,
    .c-step,
    .c-video-player,
    .c-resources {
      padding-right: 35%;
    }
  }
  .c-body-copy section h2 {
    line-height: 1.2;
    padding-top: 1rem;
  }

  // article {
    .c-body-copy section {
      position: relative;
    }
    .c-costs {
      border-left: solid 5px #005ea5;
      padding-left: 1.5rem !important;
      margin-bottom: 3rem;
    }
    h4.c-cost__heading {
      font-size: 1.9rem;
      font-family: GDS-T-Bold;
      font-weight: bold;
      margin: 0;
    }
    p.c-cost__amount {
      font-size: 3.6rem;
      font-family: GDS-T-Bold;
      font-weight: bold;
      margin: 0;
    }
    p.c-cost__small_print {
      font-size: 1.4rem;
      margin: 0;
    }
    .c-costs {
      +above(m) {
        width: 50%;
      }
      +above(l) {
        width: auto;
      }
    }
    .c-steps .c-costs {
      +above(m) {
        margin-left: 9rem;
      }
      +above(ml) {
        margin-left: 0;
      }
    }
    +above(ml) {
      .c-costs {
        border-left: none;
        border-top: solid 5px #005ea5;
        padding-left: 0 !important;
        padding-top: 1rem;
        position: absolute;
        right: 0;
        top: 3rem;
        width: 31%;
      }
      .c-section-costs {
        top: 0;
        left: 100%;
        margin-left: 4rem;
        right: auto;
        width: 47.5%;
      }
    }
  // }

  .c-video-player__container iframe {
    width: 100%;
    height: 215px;
    +above(m) {
      height: 405px;
    }
    +above(ml) {
      height: 345px;
    }
    +above(l) {
      height: 355px;
    }
  }


  &.c-about .c-body-copy {
    h2 {
      font-size: 1.9rem;
      margin: 2em 0 2rem 0;
    };
    +above(m) {
      h2 {
        font-size: 2.4rem;
      }
    }
    h3 {
      margin-bottom: 2rem;
    }
    blockquote {
      margin: 3rem 0;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    table {
      border-collapse: collapse;
      border-spacing: 0;
      margin: 1em 0 2em;
      width: 100%;
    }

    th,
    td {
      font-weight: 400;
      font-size: 14px;
      line-height: 1.14286;
      vertical-align: top;
      padding: .75em .5em .75em 0;
      border-bottom: solid 1px #bfc1c3;
    }
    th {
      line-height: 1.25em;
      text-align: left;
      font-weight: 700;
    }

    +above(m) {
      th,
      td {
        font-size: 16px;
        line-height: 1.25;
      }
    }
  }


}