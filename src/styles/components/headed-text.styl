&-headed-text {
  margin-bottom: $vspacing;
  &.divider {
    margin-bottom:0;
  }

  h1 {
    font-size: $mantle;
    margin-bottom: 1.5rem;
  }

  p {
    ff-body();
  }
  p.heading {
    margin-bottom: 0;
  }
  .u-primary & {
    h1 {
      font-size: 3.6rem;
      margin-top: 1rem;
      +above(m) {
        font-size: 4.8rem;
        margin-top: 3rem;
      }
    }
  }

}
