&-who-is-involved {
  clear:both;
  text-align: center;
  +above(l) {
    text-align: left;
  }
  h2 {
    font-size: $outerCore;
    padding: 0;
    margin-bottom: $vspacing;
  }
  .u-card & {
    margin-bottom: 0;
  }

  table {
    width: 96%;
    caption-side: bottom;
    font-size: $innerCore;
    caption {
      padding: $spacing
    }
    tr {
      border-bottom: 1px solid $border;
    }
    th {
      span {
        padding: $vspacing*1.5 $hspacing;
        font-weight: bold;
        &:first-of-type {
          &:after {
            content: "&";
            display: inline;
            margin-left: $hspacing;
          }
        }
        &:last-of-type {
          padding-left: 0;
        }
        +above(m) {
          span(1/2);
          &:first-of-type {
            &:after {
              display: none;
            }
          }
          &:last-of-type {
            padding-left: $hspacing;
          }
        }
      }
    }
    td {
      display: block;
      text-align: left;
      position: relative;
      word-wrap: break-word;
      padding: $vspacing;
      &:first-of-type {
        font-weight: bold;
      }
      +above(m) {
        span(1/2);
        padding: $vspacing*1.5 $hspacing;
        text-align: left;
        &:first-of-type {
          font-weight: normal;
        }
      }

      &:before {
        position: absolute;
        left: $hspacing;
        top: $vspacing;
        font-size: 25px //px value used to size icon font
      }
      &:nth-of-type(odd) {
        padding-left: $hspacing*5;
      }

      .lozenge {
        position: absolute;
        bottom: $vspacing;
        left: $hspacing*2.5;
        background-color: $light;
        width: 20px;
        height: 20px;
        line-height: 1.6;
        text-align: center;
        border-radius: 100%;
        font-size: $baseFont*1.2;
        font-weight: bold;
        &:before {
          display: inline;
          content: "x";
        }
      }
    }
  }

}
