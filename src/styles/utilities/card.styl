
&-card {
  clear: both;
  cf();
  margin: $spacing 0;
  margin-bottom: 2rem;
  border-bottom: 1px solid #6f777b;
  &:last-child {
    border-bottom: 2px solid #000000;
    .u-cards:last-child & {
      border-bottom: none;
      margin-bottom: 0;
    }
  }
  &:after {
    content: '';
    display: block;
    clear: both;
    padding-top: 2rem;
  }
  .u-cards & h1 {
    font-size: 1.9rem;
    +above(m) {
      font-size: 3.4rem;
    }
  }
  h3 {
    margin: 1rem 0 0.5rem 0;
  }
}
