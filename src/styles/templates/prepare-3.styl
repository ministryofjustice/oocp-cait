&-prepare-3 {
  padding: $vspacing*3 0 $vspacing*1;
  .c-headed-text {
    +above(m) {
      span(2/3);
    }
    margin-bottom: 0;
  }
  .article-columns {
    overflow: hidden;
    clear: both;
  }
  > .article-columns .col {
    &:not(:last-child) {
      border-bottom: 1px solid lighten($dark, 70%);
    }
    &:last-child {
      padding-bottom: 0;
      margin-bottom: 0;
    }
    padding-bottom: $vspacing;
    +above(m) {
      col(1/3);
      padding: 0 $spacing*2 0 0;
      padding-bottom: 300px;
      margin-bottom: -300px;
      border-bottom: 0;

      &:not(:last-child) {
        border-right: 1px solid lighten($dark, 70%);
      }

      &-0 {
        padding-left: 0;
      }
      &-2 {
        padding-right: 0;
      }
      & *:last-child {
        margin-bottom: 0;
      }
    }

    margin-bottom: $vspacing;
    font-size: $innerCore;

    h2 {
      font-size: $outerCore;
      padding: 0;
      margin-bottom: $vspacing;
    }
    p {
      ff-body();
      font-size: $innerCore;
    }

    ul {
      real-list();
      font-size: $innerCore;
    }

  }
}

&-prepare {
  .prepare-info {
    padding: 1.5rem 1.5rem 1rem;
    background: #f8f8f8;
    aside & {
      +above(m) {
        margin-top: 2rem;
      }
    }
    p {
      margin-bottom: 1rem;
    }
    ul {
      real-list();
      // font-size: 1.5rem;
      // line-height: 1.5;
      // margin-bottom: 1rem;
    }
    li {
      list-style-type: disc;
      // padding-left: 1rem;
      // margin-left: 3rem;
      font-size: 1.5rem;
      line-height: 1.5;
      margin-bottom: 1rem;
    }
  }
}