&-prepare-3 {
  padding: $vspacing*2 $vspacing*3;
  .c-headed-text {
    margin-bottom: $vspacing;
  }
  > .col {
    col(1/3);
    padding: 0 $spacing*2;
    height: 68%;
    margin-bottom: $vspacing;
    font-size: $innerCore;
    &-0 {
      padding-left: 0;
    }
    &-2 {
      padding-right: 0;
    }
    h2 {
      font-size: $outerCore;
      padding: 0;
      margin-bottom: $vspacing;
    }
    p {
      ff-body();
      font-size: $innerCore;
    }

    ul {
      real-list();
      font-size: $innerCore;
    }

    &:not(:last-child) {
      border-right: 1px solid lighten($dark, 70%);
    }
  }
}
