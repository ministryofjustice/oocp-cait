&-prepare-3 {
  padding: $vspacing*2 $vspacing*3;
  .c-headed-text {
    margin-bottom: $vspacing;
  }
  > .col {
    border-bottom: 1px solid lighten($dark, 70%);
    padding-bottom: $vspacing;
    +above(m) {
      col(1/3);
      padding: 0 $spacing*2;
      min-height: 290px; // replace with js height checker
      border-bottom: 0;

      &:not(:last-child) {
        border-right: 1px solid lighten($dark, 70%);
      }

      &-0 {
        padding-left: 0;
      }
      &-2 {
        padding-right: 0;
      }
    }

    margin-bottom: $vspacing;
    font-size: $innerCore;

    h2 {
      font-size: $outerCore;
      padding: 0;
      margin-bottom: $vspacing;
    }
    p {
      ff-body();
      font-size: $innerCore;
    }

    ul {
      real-list();
      font-size: $innerCore;
    }

  }
}
