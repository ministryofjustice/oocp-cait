// This file is to store commonly used variables.

// Colour Pallet
$light = #fff;
$dark = #444;

// Main site colours
$primary   = $dark;
$secondary = $light;
$links = #326CB0;

$boxbg = #f8f8f8;
$border = #BFC1C3;

// Size defaults
$baseFont   = 1rem;
$lineHeight = 1;
$brad       = 5px; // border-radius
$spacing    = 1rem;
$hspacing   = $spacing;
$vspacing   = $spacing;
$componentVSpacing = $vspacing*3.5 //35px
$bodyCopyLineHeight = $lineHeight*1.6 //16px


// Heading levels (names are abstracted)
$crust     = $baseFont * 4.8;
$mantle    = $baseFont * 3.4;
$outerCore = $baseFont * 1.9;
$innerCore = $baseFont * 1.6;

// Standard Text
$lead      = $mantle
$bodyCopy  = $baseFont *1.9
$smallCopy  = $baseFont * 1.5;

// Rupture scales
rupture.scale       = 320px 410px 500px 740px 1080px 1280px 1700px;
rupture.scale-names = 'xxs' 'xs' 's' 'm' 'l' 'xl' 'xxl';
