/**
 * Setup
 *
 * Setting up the grid and primary styles
 *
 **/

body {
  font-family: 'Source Sans Pro', sans-serif;
  background-color: #fdfdf8;
  font-size: $bodyCopy;
}

h1, h2, h3 {
  ff-title();
}

a {
  color: $links;
  text-decoration: underline;
  &:hover {
    text-decoration: none;
    color: darken($links, 10%);
  }
  &:focus {
    background-color: #ffbf47;
    outline: 3px solid #ffbf47;
  }
}

.skip--navigation {
  a {
    position: absolute;
    top:-80px;
    display: block;
    width: 100%;
    padding: 1rem;
    font-size: 1.6rem;
    text-align: center;
    background: $primary;
    color: #fff;
    z-index: 999999;
    -webkit-transition: top 1s; /* For Safari 3.1 to 6.0 */
    transition: top 1s;

    &:focus {
      top: 0;
    }
  }
}

.no-js .warnings {
  position: static;
}
.warning {
  font-weight: bold;
  color: #000;
}

.for-print,
.js .js-disabled {
  display: none;
}

.wrapper {
  min-height:100vh;
}

.centralise {
  center(960px);
}

.full {
  padding: $vspacing;
  +above(l) {
    padding:0;
  }
}

// Columns
.u-primary {
    padding: $spacing;
    +above(l) {
      col(2/3, cycle: 2);
      padding: 0 5% 0 0;
    }

    h1 {
      font-size: $mantle;
      margin-bottom: $vspacing;
      a {
        color: $primary;
        &:hover {
          text-decoration: underline;
        }
      }
    }

    p {
      ff-body();
    }

    ul {
      list-style: disc;
      margin-left: $hspacing*3;
      li {
        margin-bottom: $vspacing;
      }
    }
    .two-columns-uneven {
      cf();
      +above(m) {
        > div {
          span(3/4);
          padding-right: $hspacing*3;
          & + div {
            span(1/4);
            padding-right: 0;
          }
        }
      }

    }
}

.u-secondary {
  +above(l) {
    col(1/3, cycle: 2);
    margin-top:$vspacing*10;
    &--no-top-margin {
      margin-top: 0;
    }
  }
  padding: $spacing;
  h2 {
    margin-bottom: $vspacing;
  }
}
